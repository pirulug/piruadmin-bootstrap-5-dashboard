extends ../layouts/auth

append config
  - pageName = 'Sign In'
  - pageUrl = 'pages-sign-in'

block content
  .d-flex.min-vh-100.align-items-center.justify-content-center
    .container
      .row.justify-content-center
        .col-sm-10.col-md-8.col-lg-5.col-xl-4
          
          .text-center.mb-4
            .d-inline-flex.align-items-center.justify-content-center.bg-primary.text-white.rounded-3.mb-3(style="width: 48px; height: 48px;")
              i.fa-solid.fa-layer-group.fs-4
            h4.fw-bold.mb-1 Welcome back
            p.text-body-secondary Sign in to manage your account

          .card.border.border-secondary-subtle.bg-body.rounded-3
            .card-body.p-4.p-sm-5
              
              form
                .mb-3
                  label.form-label.fw-semibold(for='inputEmail') Email
                  input#inputEmail.form-control.form-control-lg(
                    type='email' 
                    name='email' 
                    placeholder='name@company.com'
                  )
                
                .mb-3
                  .d-flex.justify-content-between.align-items-center.mb-1
                    label.form-label.fw-semibold(for='inputPassword') Password
                    a.small.text-decoration-none(href='/auth-reset-password.html') Forgot password?
                  
                  .input-group.input-group-lg
                    input#inputPassword.form-control.border-end-0(
                      type='password' 
                      name='password' 
                      placeholder='Enter password'
                    )
                    button#togglePassword.input-group-text.bg-transparent.border-start-0(type="button")
                      i.fa-regular.fa-eye-slash.text-body-secondary

                .mb-4
                  .form-check
                    input#rememberMe.form-check-input(type='checkbox' name='remember-me' checked)
                    label.form-check-label.text-body-secondary(for='rememberMe') Remember me on this device

                .d-grid.mb-4
                  button.btn.btn-primary.btn-lg(type='submit') Sign In

                .position-relative.text-center.mb-4
                  hr.border-secondary-subtle.m-0
                  span.position-absolute.top-50.start-50.translate-middle.bg-body.px-2.text-body-secondary.small Or sign in with

                .vstack.gap-2
                  button.btn.btn-outline-secondary.w-100(type='button')
                    i.fab.fa-google.me-2
                    | Google
                  button.btn.btn-outline-secondary.w-100(type='button')
                    i.fab.fa-github.me-2
                    | GitHub

          .text-center.mt-4
            p.text-body-secondary.mb-0 Don't have an account? 
              a.fw-bold.text-decoration-none(href='/auth-sign-up.html') Create an account

block scripts
  script.
    const togglePassword = document.getElementById("togglePassword");
    const passwordInput = document.getElementById("inputPassword");
    const icon = togglePassword.querySelector("i");

    togglePassword.addEventListener("click", () => {
      const isPassword = passwordInput.type === "password";
      passwordInput.type = isPassword ? "text" : "password";
      passwordInput.focus();
      
      if(isPassword) {
        icon.classList.remove("fa-eye-slash");
        icon.classList.add("fa-eye");
      } else {
        icon.classList.remove("fa-eye");
        icon.classList.add("fa-eye-slash");
      }
    });