extends ../layouts/dashboard

append config
  -pageName = 'Alerts'
  -pageUrl = 'ui-alerts'

block content

  .row
    // Basic alerts
    .col-lg-6
      .card.mb-3
        .card-body
          h2.card-title Basic alerts
          p.text-secondary
            | Use
            code .alert
            |  with contextual classes for basic messages.

          .alert.alert-primary(role='alert') This is a primary alert — check it out!
          .alert.alert-secondary(role='alert') This is a secondary alert — check it out!
          .alert.alert-success(role='alert') This is a success alert — check it out!
          .alert.alert-info(role='alert') This is an info alert — check it out!
          .alert.alert-warning(role='alert') This is a warning alert — check it out!
          .alert.alert-danger(role='alert') This is a danger alert — check it out!
          .alert.alert-light(role='alert') This is a light alert — check it out!
          .alert.alert-dark(role='alert') This is a dark alert — check it out!

    // Alerts with icon
    .col-lg-6
      .card.mb-3
        .card-body
          h2.card-title Alerts with icon
          p.text-secondary Add
            code .alert-media
            |  to combine an icon with alert content.

          .alert.alert-primary.alert-media(role='alert')
            .alert-icon
              i.fa-solid.fa-circle
            .alert-body Primary alert with icon

          .alert.alert-secondary.alert-media(role='alert')
            .alert-icon
              i.fa-solid.fa-circle
            .alert-body Secondary alert with icon

          .alert.alert-success.alert-media(role='alert')
            .alert-icon
              i.fa-solid.fa-circle-check
            .alert-body Success alert with icon

          .alert.alert-info.alert-media(role='alert')
            .alert-icon
              i.fa-solid.fa-circle-info
            .alert-body Info alert with icon

          .alert.alert-warning.alert-media(role='alert')
            .alert-icon
              i.fa-solid.fa-triangle-exclamation
            .alert-body Warning alert with icon

          .alert.alert-danger.alert-media(role='alert')
            .alert-icon
              i.fa-solid.fa-circle-xmark
            .alert-body Danger alert with icon

          .alert.alert-light.alert-media(role='alert')
            .alert-icon
              i.fa-regular.fa-circle
            .alert-body Light alert with icon

          .alert.alert-dark.alert-media(role='alert')
            .alert-icon
              i.fa-solid.fa-circle
            .alert-body Dark alert with icon

    // Outline alerts
    .col-lg-6
      .card.mb-3
        .card-body
          h2.card-title Outline alerts
          p.text-secondary Use
            code .alert-outline-*
            |  for subtle transparent alerts.

          .alert.alert-outline-primary(role='alert') Outline primary alert
          .alert.alert-outline-secondary(role='alert') Outline secondary alert
          .alert.alert-outline-success(role='alert') Outline success alert
          .alert.alert-outline-info(role='alert') Outline info alert
          .alert.alert-outline-warning(role='alert') Outline warning alert
          .alert.alert-outline-danger(role='alert') Outline danger alert
          .alert.alert-outline-light(role='alert') Outline light alert
          .alert.alert-outline-dark(role='alert') Outline dark alert

    // Dismissible alerts
    .col-lg-6
      .card.mb-3
        .card-body
          h2.card-title Dismissible alerts
          p.text-secondary Add
            code .alert-dismissible
            |  with a close button.

          .alert.alert-success.alert-media.alert-dismissible(role='alert')
            .alert-icon
              i.fa-solid.fa-circle-check
            .alert-body Operation successful!
            button.btn-close(type='button' data-bs-dismiss='alert' aria-label='Close')

          .alert.alert-warning.alert-media.alert-dismissible(role='alert')
            .alert-icon
              i.fa-solid.fa-triangle-exclamation
            .alert-body Something went wrong
            button.btn-close(type='button' data-bs-dismiss='alert' aria-label='Close')

          .alert.alert-danger.alert-media.alert-dismissible(role='alert')
            .alert-icon
              i.fa-solid.fa-circle-xmark
            .alert-body Critical error detected
            button.btn-close(type='button' data-bs-dismiss='alert' aria-label='Close')

          .alert.alert-info.alert-media.alert-dismissible(role='alert')
            .alert-icon
              i.fa-solid.fa-circle-info
            .alert-body Here’s some information
            button.btn-close(type='button' data-bs-dismiss='alert' aria-label='Close')

    // Alerts with heading & description
    .col-lg-6
      .card.mb-3
        .card-body
          h2.card-title Alerts with description
          p.text-secondary Build on
            code .alert-body
            |  with headings, links, or extra content.

          .alert.alert-success.alert-media(role='alert')
            .alert-icon
              i.fa-solid.fa-circle-check
            .alert-body
              h4.alert-heading Success!
              p.text-secondary Your account has been saved successfully.
              a.alert-link(href="#") View details

          .alert.alert-danger.alert-media(role='alert')
            .alert-icon
              i.fa-solid.fa-circle-xmark
            .alert-body
              h4.alert-heading Error!
              p.text-secondary Something went wrong during saving.
              hr
              a.alert-link(href="#") Try again
