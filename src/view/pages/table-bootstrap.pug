extends ../layouts/dashboard

append config
  -pageName = 'Tables'
  -pageUrl = 'table-bootstrap'

block content
  .row
    // =====================================================
    // Basic table
    // =====================================================
    .col-lg-6
      .card.mb-3
        .card-body
          h2.card-title Basic table
          p.text-secondary
            | Basic tables use the
            code .table
            |  class for standard data display.

          table.table
            thead
              tr
                th #
                th Name
                th Email
                th Status
            tbody
              tr
                td 1
                td John Doe
                td john@example.com
                td Active
              tr
                td 2
                td Jane Smith
                td jane@example.com
                td Inactive

    // =====================================================
    // Striped table
    // =====================================================
    .col-lg-6
      .card.mb-3
        .card-body
          h2.card-title Striped table
          p.text-secondary
            | Striped tables use
            code .table-striped
            |  to add zebra-striping to rows.

          table.table.table-striped
            thead
              tr
                th #
                th Product
                th Price
                th Stock
            tbody
              tr
                td 1
                td Laptop
                td $1200
                td In stock
              tr
                td 2
                td Mouse
                td $25
                td Out of stock

    // =====================================================
    // Hover table
    // =====================================================
    .col-lg-6
      .card.mb-3
        .card-body
          h2.card-title Hover table
          p.text-secondary
            | Hover tables use
            code .table-hover
            |  to highlight rows on mouse over.

          table.table.table-hover
            thead
              tr
                th #
                th User
                th Role
                th Status
            tbody
              tr
                td 1
                td Admin
                td Administrator
                td Active
              tr
                td 2
                td Editor
                td Editor
                td Active

    // =====================================================
    // Bordered table
    // =====================================================
    .col-lg-6
      .card.mb-3
        .card-body
          h2.card-title Bordered table
          p.text-secondary
            | Bordered tables use
            code .table-bordered
            |  to add borders to all cells.

          table.table.table-bordered
            thead
              tr
                th #
                th Order
                th Date
                th Total
            tbody
              tr
                td 1
                td #1023
                td 2025-01-10
                td $340
              tr
                td 2
                td #1024
                td 2025-01-11
                td $180

    // =====================================================
    // Small table
    // =====================================================
    .col-lg-6
      .card.mb-3
        .card-body
          h2.card-title Small table
          p.text-secondary
            | Compact tables use
            code .table-sm
            |  to reduce cell padding.

          table.table.table-sm
            thead
              tr
                th #
                th File
                th Size
                th Type
            tbody
              tr
                td 1
                td report.pdf
                td 1.2 MB
                td PDF
              tr
                td 2
                td image.png
                td 540 KB
                td PNG

    // =====================================================
    // Responsive table
    // =====================================================
    .col-lg-6
      .card.mb-3
        .card-body
          h2.card-title Responsive table
          p.text-secondary
            | Responsive tables use
            code .table-responsive
            |  to enable horizontal scrolling on small screens.

          .table-responsive
            table.table
              thead
                tr
                  th #
                  th Customer
                  th Country
                  th Orders
                  th Revenue
              tbody
                tr
                  td 1
                  td Carlos
                  td Peru
                  td 12
                  td $2,400
                tr
                  td 2
                  td Anna
                  td Germany
                  td 8
                  td $1,750

    // =====================================================
    // Combined table styles
    // =====================================================
    .col-lg-12
      .card.mb-3
        .card-body
          h2.card-title Combined table styles
          p.text-secondary
            | Tables can combine styles using
            code .table-{striped|hover|bordered|sm}
            |  together.

          table.table.table-striped.table-hover.table-bordered
            thead
              tr
                th #
                th Project
                th Manager
                th Status
            tbody
              tr
                td 1
                td Dashboard UI
                td Guido
                td In progress
              tr
                td 2
                td API Integration
                td Maria
                td Completed