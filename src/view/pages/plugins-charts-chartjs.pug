extends ../layouts/dashboard

append config
  -pageName = 'Charts'
  -pageUrl = 'plugins-charts-chartjs'

block content
  .row
    // Line Chart
    .col-12.col-lg-6
      .card.mb-3.flex-fill.w-100
        .card-header
          h5.card-title Line Chart
          h6.card-subtitle.text-muted
            | Line charts use
            code type: "line"
            |  and are ideal for trends over time.
        .card-body
          .chart
            canvas#chartjs-line

    // Bar Chart
    .col-12.col-lg-6
      .card.mb-3
        .card-header
          h5.card-title Bar Chart
          h6.card-subtitle.text-muted
            | Bar charts use
            code type: "bar"
            |  to compare values between categories.
        .card-body
          .chart
            canvas#chartjs-bar

    // Doughnut Chart
    .col-12.col-lg-6
      .card.mb-3
        .card-header
          h5.card-title Doughnut Chart
          h6.card-subtitle.text-muted
            | Doughnut charts use
            code type: "doughnut"
            |  for proportional data.
        .card-body
          .chart.chart-sm
            canvas#chartjs-doughnut

    // Pie Chart
    .col-12.col-lg-6
      .card.mb-3
        .card-header
          h5.card-title Pie Chart
          h6.card-subtitle.text-muted
            | Pie charts use
            code type: "pie"
            |  to show percentage distribution.
        .card-body
          .chart.chart-sm
            canvas#chartjs-pie

    // =====================================================
    // NEW DEMONSTRATIONS
    // =====================================================

    // Area Chart
    .col-12.col-lg-6
      .card.mb-3
        .card-header
          h5.card-title Area Chart
          h6.card-subtitle.text-muted
            | Area charts are line charts with
            code fill: true
            |  enabled.
        .card-body
          .chart
            canvas#chartjs-area

    // Horizontal Bar Chart
    .col-12.col-lg-6
      .card.mb-3
        .card-header
          h5.card-title Horizontal Bar Chart
          h6.card-subtitle.text-muted
            | Horizontal bars use
            code indexAxis: "y"
            | .
        .card-body
          .chart
            canvas#chartjs-horizontal

    // Radar Chart
    .col-12.col-lg-6
      .card
        .card-header
          h5.card-title Radar Chart
          h6.card-subtitle.text-muted
            | Radar charts use
            code type: "radar"
            |  for multi-variable comparison.
        .card-body
          .chart
            canvas#chartjs-radar

    // Polar Area Chart
    .col-12.col-lg-6
      .card
        .card-header
          h5.card-title Polar Area Chart
          h6.card-subtitle.text-muted
            | Polar area charts use
            code type: "polarArea"
            | .
        .card-body
          .chart
            canvas#chartjs-polar

block scripts
  script(src='js/chartjs.js')

  script.
    // Line chart
    new Chart(document.getElementById("chartjs-line"), {
      type: "line",
      data: {
        labels: ["Jan","Feb","Mar","Apr","May","Jun","Jul","Aug","Sep","Oct","Nov","Dec"],
        datasets: [{
          label: "Sales",
          data: [2115,1562,1584,1892,1487,2223,2966,2448,2905,3838,2917,3327],
          borderColor: "#ff0055",
          backgroundColor: "transparent",
          fill: true
        }]
      },
      options: { maintainAspectRatio: false }
    });

    // Bar chart
    new Chart(document.getElementById("chartjs-bar"), {
      type: "bar",
      data: {
        labels: ["Jan","Feb","Mar","Apr","May","Jun"],
        datasets: [{
          label: "Revenue",
          data: [54,67,41,55,62,45],
          backgroundColor: "#ff0055"
        }]
      },
      options: { maintainAspectRatio: false }
    });

    // Doughnut chart
    new Chart(document.getElementById("chartjs-doughnut"), {
      type: "doughnut",
      data: {
        labels: ["Social","Search","Direct","Other"],
        datasets: [{
          data: [260,125,54,146],
          backgroundColor: ["#ff0055","#17a2b8","#dc3545","#dee2e6"],
          borderColor: "transparent"
        }]
      },
      options: { maintainAspectRatio: false, cutout: "65%" }
    });

    // Pie chart
    new Chart(document.getElementById("chartjs-pie"), {
      type: "pie",
      data: {
        labels: ["Social","Search","Direct","Other"],
        datasets: [{
          data: [260,125,54,146],
          backgroundColor: ["#ff0055","#17a2b8","#dc3545","#dee2e6"]
        }]
      },
      options: { maintainAspectRatio: false }
    });

    // Area chart
    new Chart(document.getElementById("chartjs-area"), {
      type: "line",
      data: {
        labels: ["Mon","Tue","Wed","Thu","Fri"],
        datasets: [{
          label: "Visitors",
          data: [120,190,300,250,220],
          borderColor: "#17a2b8",
          backgroundColor: "rgba(23,162,184,.3)",
          fill: true
        }]
      },
      options: { maintainAspectRatio: false }
    });

    // Horizontal bar chart
    new Chart(document.getElementById("chartjs-horizontal"), {
      type: "bar",
      data: {
        labels: ["Chrome","Firefox","Safari","Edge"],
        datasets: [{
          label: "Users",
          data: [65,59,80,81],
          backgroundColor: "#ff0055"
        }]
      },
      options: {
        indexAxis: "y",
        maintainAspectRatio: false
      }
    });

    // Radar chart
    new Chart(document.getElementById("chartjs-radar"), {
      type: "radar",
      data: {
        labels: ["Speed","Reliability","Comfort","Safety","Efficiency"],
        datasets: [{
          label: "Car A",
          data: [65,59,90,81,56],
          backgroundColor: "rgba(255,0,85,.3)",
          borderColor: "#ff0055"
        }]
      },
      options: { maintainAspectRatio: false }
    });

    // Polar area chart
    new Chart(document.getElementById("chartjs-polar"), {
      type: "polarArea",
      data: {
        labels: ["Red","Blue","Yellow","Green"],
        datasets: [{
          data: [11,16,7,14],
          backgroundColor: ["#ff0055","#17a2b8","#ffc107","#28a745"]
        }]
      },
      options: { maintainAspectRatio: false }
    });
