extends ../layouts/dashboard

append config
  - pageName = 'Profile'
  - pageUrl = 'account-profile'

block styles
  style.
    .profile-cover {
      height: 250px;
      object-fit: cover;
    }
    .profile-avatar-container {
      margin-top: -85px;
    }
    .profile-avatar {
      width: 170px;
      height: 170px;
      object-fit: cover;
      border: 5px solid var(--bs-card-bg);
    }
    @media (max-width: 576px) {
      .profile-cover { height: 180px; }
      .profile-avatar { width: 120px; height: 120px; }
      .profile-avatar-container { margin-top: -60px; }
    }

block content
  .card.mb-3.overflow-hidden
    img.card-img-top.profile-cover(src='https://dummyimage.com/1200x300/333/666.jpg' alt='Cover Image')
    
    .card-body.text-center
      .profile-avatar-container.mb-4.position-relative
        img.rounded-circle.profile-avatar(src='https://dummyimage.com/200x200/000/fff.jpg' alt='Pirulug Avatar')
        
      h2.fw-bold.mb-1 Pirulug
      p.text-body-secondary.mb-3
        | Developer & Open Source Enthusiast 
        span.mx-2 &bullet;
        | Perú
        
      .d-flex.justify-content-center.gap-2.mb-4
        a.btn.btn-primary.px-4(href='https://github.com/Pirulug' target='_blank')
          i.bi.bi-github.me-2
          | Follow
        button.btn.btn-outline-primary.px-4(type='button')
          i.bi.bi-envelope.me-2
          | Message

      .d-flex.flex-wrap.justify-content-center.gap-2
        span.badge.rounded-pill.border.text-body-secondary.fw-normal.px-3.py-2 Python
        span.badge.rounded-pill.border.text-body-secondary.fw-normal.px-3.py-2 Open Source
        span.badge.rounded-pill.border.text-body-secondary.fw-normal.px-3.py-2 Backend
        span.badge.rounded-pill.border.text-body-secondary.fw-normal.px-3.py-2 DevOps

  .row.g-3
    .col-md-4
      .card
        .card-header.bg-transparent.border-bottom
          h5.card-title.mb-0.d-flex.align-items-center
            i.bi.bi-person-badge.me-2
            | About
        .card-body
          ul.list-unstyled.d-grid.gap-3.mb-0
            li.d-flex.align-items-center
              i.bi.bi-house.text-body-secondary.me-3.fs-5
              div
                small.text-body-secondary Lives in
                div.fw-medium Perú
            li.d-flex.align-items-center
              i.bi.bi-geo-alt.text-body-secondary.me-3.fs-5
              div
                small.text-body-secondary From
                div.fw-medium Huaraz
            li.d-flex.align-items-center
              i.bi.bi-briefcase.text-body-secondary.me-3.fs-5
              div
                small.text-body-secondary Works on
                div
                  a.text-decoration-none(href='https://github.com/Pirulug' target='_blank') GitHub Projects

      .card.mt-3
        .card-header.bg-transparent.border-bottom
          h5.card-title.mb-0.d-flex.align-items-center
            i.bi.bi-globe.me-2
            | Social
        .list-group.list-group-flush
          a.list-group-item.list-group-item-action.d-flex.justify-content-between.align-items-center(href='https://github.com/Pirulug' target='_blank')
            span
              i.bi.bi-github.me-2
              | GitHub
            small.text-body-secondary @Pirulug
          a.list-group-item.list-group-item-action.d-flex.justify-content-between.align-items-center(href='https://twitter.com/Pirulug' target='_blank')
            span
              i.bi.bi-twitter.text-info.me-2
              | Twitter
            small.text-body-secondary @Pirulug
          a.list-group-item.list-group-item-action.d-flex.justify-content-between.align-items-center(href='#')
            span
              i.bi.bi-instagram.text-danger.me-2
              | Instagram
            small.text-body-secondary @Pirulug

    .col-md-8
      .card
        .card-header.bg-transparent.border-bottom.d-flex.justify-content-between.align-items-center
          h5.card-title.mb-0 Activities
          button.btn.btn-sm.btn-outline-secondary Filter
        
        .card-body
          .d-flex.gap-3
            div
              img.rounded-circle(src='https://dummyimage.com/200x200/000/fff.jpg' width='48' height='48' alt='Pirulug')
            .flex-grow-1
              .d-flex.justify-content-between.align-items-center.mb-1
                span.fw-bold Pirulug
                small.text-body-secondary Just now
              p.mb-2.text-body-secondary
                | Pushed 3 new commits to 
                a.fw-medium.text-decoration-none(href="#") project-alpha
                | .
              .card.border.mb-3
                 .card-body.p-3
                    .d-flex.align-items-center
                        i.bi.bi-git.fs-4.me-3.text-primary
                        div
                            div.fw-medium fix: responsive layout on profile page
                            small.text-body-secondary main branch
          
          hr.my-4

          .d-flex.gap-3
            div
               .d-flex.justify-content-center.align-items-center.rounded-circle.border(style="width:48px; height:48px")
                  i.bi.bi-star-fill.text-warning
            .flex-grow-1
              .d-flex.justify-content-between.align-items-center.mb-1
                span.fw-bold System
                small.text-body-secondary 2 hours ago
              p.mb-0.text-body-secondary
                | You starred the repository 
                a.fw-medium.text-decoration-none(href="#") bootstrap-5-themes
                | .

          hr.my-4

          .d-grid
            a.btn.btn-outline-secondary(href='#') Load more activities